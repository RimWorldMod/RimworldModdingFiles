<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <RulePackDef>
    <defName>Damage_Bomb</defName>
    <rulePack>
      <rulesStrings>
        <li>damaged_past(p=2)->blasted</li>
        <li>damaged_past(p=2)->exploded</li>
        <li>damaged_past->injured</li>
        <li>damaged_past->damaged</li>
        <li>damaged_past->wounded</li>
        <li>damaged_past->hurt</li>
        
        <li>destroyed_past->shattered</li>
        <li>destroyed_past->crushed</li>
        <li>destroyed_past->obliterated</li>
        <li>destroyed_past->annihilated</li>
        <li>destroyed_past->detonated</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

  <RulePackDef>
    <defName>Damage_Flame</defName>
    <rulePack>
      <rulesStrings>
        <li>damaged_past(p=2)->blasted</li>
        <li>damaged_past(p=2)->scorched</li>
        <li>damaged_past(p=2)->burned</li>
        <li>damaged_past(p=2)->blistered</li>
        <li>damaged_past(p=2)->ignited</li>
        <li>damaged_past(p=2)->seared</li>
        <li>damaged_past->injured</li>
        <li>damaged_past->damaged</li>
        <li>damaged_past->wounded</li>
        <li>damaged_past->hurt</li>

        <li>damaged_present(p=2)->blasting</li>
        <li>damaged_present(p=2)->scorching</li>
        <li>damaged_present(p=2)->burning</li>
        <li>damaged_present(p=2)->blistering</li>
        <li>damaged_present(p=2)->igniting</li>
        <li>damaged_present(p=2)->searing</li>
        <li>damaged_present->injuring</li>
        <li>damaged_present->damaging</li>
        <li>damaged_present->wounding</li>
        <li>damaged_present->hurting</li>

        <li>destroyed_past->cremated</li>
        <li>destroyed_past->incinerated</li>
        <li>destroyed_past->charred</li>
        <li>destroyed_past->obliterated</li>
        <li>destroyed_past->annihilated</li>
        <li>destroyed_past->detonated</li>

        <li>destroyed_present->cremating</li>
        <li>destroyed_present->incinerating</li>
        <li>destroyed_present->charring</li>
        <li>destroyed_present->obliterating</li>
        <li>destroyed_present->annihilating</li>
        <li>destroyed_present->detonating</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

  <!-- Weird damage types that don't really destroy anything -->
  <RulePackDef>
    <defName>Damage_Extinguish</defName>
    <rulePack>
      <rulesStrings>
        <li>damaged_past->extinguished</li>
        <li>damaged_past->swamped</li>
        <li>damaged_past->foamed</li>
        <li>damaged_past->quenched</li>

        <li>destroyed_past->damaged_past</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

  <RulePackDef>
