  </SpecialThingFilterDef>

  <SpecialThingFilterDef>
    <defName>AllowNonDeadmansApparel</defName>
    <label>allow clean apparel</label>
    <description>Allow clothing that was never worn by a corpse. Most humans find corpse-tainted clothing to be disturbing, and traders will not accept it.</description>
    <parentCategory>Apparel</parentCategory>
    <allowedByDefault>true</allowedByDefault>
    <saveKey>allowNonDeadmansApparel</saveKey>
    <workerClass>SpecialThingFilterWorker_NonDeadmansApparel</workerClass>
  </SpecialThingFilterDef>

  <SpecialThingFilterDef>
    <defName>AllowDeadmansApparel</defName>
    <label>allow tainted apparel</label>
    <description>Allow clothing that was once worn by a corpse. Most humans find corpse-tainted clothing to be disturbing, and traders will not accept it.</description>
    <parentCategory>Apparel</parentCategory>
    <allowedByDefault>true</allowedByDefault>
    <saveKey>allowDeadmansApparel</saveKey>
    <workerClass>SpecialThingFilterWorker_DeadmansApparel</workerClass>
  </SpecialThingFilterDef>

  <SpecialThingFilterDef>
    <defName>AllowFemaleGender</defName>
