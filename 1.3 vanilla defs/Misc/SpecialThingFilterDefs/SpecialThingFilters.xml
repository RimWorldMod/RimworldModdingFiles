  <SpecialThingFilterDef>
    <defName>AllowMaleGender</defName>
    <label>allow males</label>
    <description>Allow male individuals.</description>
    <parentCategory>Animals</parentCategory>
    <allowedByDefault>true</allowedByDefault>
    <saveKey>allowMaleGender</saveKey>
    <workerClass>SpecialThingFilterWorker_AllowMales</workerClass>
  </SpecialThingFilterDef>

</Defs>


