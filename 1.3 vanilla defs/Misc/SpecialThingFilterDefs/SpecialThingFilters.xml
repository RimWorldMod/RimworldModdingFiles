  <SpecialThingFilterDef>
    <defName>AllowBiocodedWeapons</defName>
    <label>allow biocoded weapons</label>
    <parentCategory>Weapons</parentCategory>
    <allowedByDefault>true</allowedByDefault>
    <saveKey>allowBiocodedWeapons</saveKey>
    <workerClass>SpecialThingFilterWorker_BiocodedWeapons</workerClass>
