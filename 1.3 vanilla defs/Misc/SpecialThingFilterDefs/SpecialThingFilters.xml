  </SpecialThingFilterDef>

  <SpecialThingFilterDef>
    <defName>AllowBiocodedApparel</defName>
    <label>allow biocoded apparel</label>
    <parentCategory>Apparel</parentCategory>
    <allowedByDefault>true</allowedByDefault>
    <saveKey>allowBiocodedApparel</saveKey>
    <workerClass>SpecialThingFilterWorker_BiocodedApparel</workerClass>
  </SpecialThingFilterDef>

  <SpecialThingFilterDef>
    <defName>AllowNonBiocodedApparel</defName>
