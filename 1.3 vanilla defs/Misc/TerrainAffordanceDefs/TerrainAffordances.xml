<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Supports light structure -->
  <TerrainAffordanceDef>
    <defName>Light</defName>
    <label>light</label>
    <order>1200</order>
    <visualizeOnAffordanceOverlay>true</visualizeOnAffordanceOverlay>
    <affordanceOverlayColor>(255,130,0)</affordanceOverlayColor>
  </TerrainAffordanceDef>

  <!-- Supports medium structures (mainly walls) -->
  <TerrainAffordanceDef>
    <defName>Medium</defName>
    <label>medium</label>
    <order>1300</order>
    <visualizeOnAffordanceOverlay>true</visualizeOnAffordanceOverlay>
    <affordanceOverlayColor>(255,255,0)</affordanceOverlayColor>
  </TerrainAffordanceDef>
  
  <!-- Supports heavy structures -->
  <TerrainAffordanceDef>
    <defName>Heavy</defName>
    <label>heavy</label>
    <order>1400</order>
    <blockAffordanceOverlay>true</blockAffordanceOverlay>
  </TerrainAffordanceDef>

  <!-- Can be built on with things that are waterproof -->
  <TerrainAffordanceDef>
    <defName>ShallowWater</defName>
    <label>shallow water</label>
    <order>2200</order>
    <visualizeOnAffordanceOverlay>true</visualizeOnAffordanceOverlay>
    <affordanceOverlayColor>(0,0,100)</affordanceOverlayColor>
  </TerrainAffordanceDef>

  <!-- Contains power usable for hydroelectrics -->
  <TerrainAffordanceDef>
    <defName>MovingFluid</defName>
    <label>moving water</label>
    <order>2300</order>
    <visualizeOnAffordanceOverlay>true</visualizeOnAffordanceOverlay>
    <affordanceOverlayColor>(0,0,200)</affordanceOverlayColor>
  </TerrainAffordanceDef>

  <!-- Bridge can be built here -->
  <TerrainAffordanceDef>
    <defName>Bridgeable</defName>
    <label>bridgeable</label>
    <order>2400</order>
  </TerrainAffordanceDef>
  
  <!-- Things can grow here -->
  <TerrainAffordanceDef>
    <defName>GrowSoil</defName>
    <label>growable</label>
    <order>3200</order>
  </TerrainAffordanceDef>

  <!-- For graves -->
  <TerrainAffordanceDef>
    <defName>Diggable</defName>
    <label>diggable</label>
    <order>3300</order>
  </TerrainAffordanceDef>

  <!-- Can be ground and smoothed into smooth stone -->
  <TerrainAffordanceDef>
    <defName>SmoothableStone</defName>
    <label>smoothable</label>
    <order>3400</order>
  </TerrainAffordanceDef>

</Defs>
