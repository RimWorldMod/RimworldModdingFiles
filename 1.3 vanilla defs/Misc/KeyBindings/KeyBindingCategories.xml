<?xml version="1.0" encoding="utf-8" ?>

<Defs>

  <KeyBindingCategoryDef>
    <defName>GameMapCamera</defName>
    <label>camera</label>
    <description>Controls for the camera.</description>
    <isGameUniversal>true</isGameUniversal>
    <checkForConflicts>
      <li>Development</li>
      <li>Game</li>
      <li>SelectionMisc</li>
      <li>MainTabs</li>
    </checkForConflicts>
  </KeyBindingCategoryDef>

  <KeyBindingCategoryDef>
    <defName>Game</defName>
    <label>in-game global</label>
    <description>Colony mode controls that apply in most situations.</description>
    <isGameUniversal>true</isGameUniversal>
    <checkForConflicts>
      <li>Development</li>
      <li>GameMapCamera</li>
      <li>SelectionMisc</li>
      <li>MainTabs</li>
    </checkForConflicts>
  </KeyBindingCategoryDef>
  
  <KeyBindingCategoryDef>
    <defName>SelectionMisc</defName>
    <label>misc</label>
    <description>Generic controls that are re-used by many items and objects throughout the game.</description>
    <checkForConflicts>
      <li>Development</li>
      <li>GameMapCamera</li>
      <li>Game</li>
      <li>MainTabs</li>
    </checkForConflicts>
  </KeyBindingCategoryDef> 
  
  <KeyBindingCategoryDef>
    <defName>SelectionSpecial</defName>
    <label>special</label>
    <description>Special controls reserved for specific functions on specific objects.</description>
    <checkForConflicts>
      <li>Development</li>
      <li>SelectionMisc</li>
      <li>GameMapCamera</li>
      <li>Game</li>
    </checkForConflicts>
  </KeyBindingCategoryDef>

  <KeyBindingCategoryDef>
    <defName>Architect</defName>
    <label>architect</label>
    <description>General-use controls for the architect mode menu.</description>
    <checkForConflicts>
      <li>Development</li>
      <li>GameMapCamera</li>
      <li>Game</li>
    </checkForConflicts>
  </KeyBindingCategoryDef>

  <KeyBindingCategoryDef>
    <defName>MainTabs</defName>
    <label>main tabs</label>
    <description>Controls for the main tabs.</description>
    <isGameUniversal>true</isGameUniversal>
    <checkForConflicts>
      <li>Development</li>
      <li>Game</li>
      <li>GameMapCamera</li>
      <li>SelectionMisc</li>
    </checkForConflicts>
  </KeyBindingCategoryDef>

  <KeyBindingCategoryDef>
    <defName>Modifiers</defName>
    <label>modifiers</label>
    <description>Controls used to modify other actions.</description>
    <selfConflicting>false</selfConflicting>
    <checkForConflicts>
      <li>Development</li>
      <li>SelectionMisc</li>
      <li>GameMapCamera</li>
      <li>Game</li>
    </checkForConflicts>
  </KeyBindingCategoryDef>
  
  <KeyBindingCategoryDef>
    <defName>Development</defName>
    <label>developer tools</label>
    <description>Controls for developers and modders. Active in development mode only.</description>
    <checkForConflicts>
      <li>GameMapCamera</li>
      <li>Game</li>
    </checkForConflicts>
  </KeyBindingCategoryDef>

  <KeyBindingCategoryDef>
    <defName>DebugMenu</defName>
    <label>debug menu</label>
    <description>Controls used in debug menus. Active in development mode only.</description>
    <checkForConflicts>
      <li>Development</li>
    </checkForConflicts>
  </KeyBindingCategoryDef>

</Defs>