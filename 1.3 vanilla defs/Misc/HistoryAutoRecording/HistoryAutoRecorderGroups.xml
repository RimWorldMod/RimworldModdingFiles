<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HistoryAutoRecorderGroupDef>
    <defName>Wealth</defName>
    <label>wealth</label>
    <historyAutoRecorderDefs>
      <li>Wealth_Total</li>
      <li>Wealth_Items</li>
      <li>Wealth_Buildings</li>
      <li>Wealth_Pawns</li>
    </historyAutoRecorderDefs>
  </HistoryAutoRecorderGroupDef>

  <HistoryAutoRecorderGroupDef>
    <defName>Population</defName>
    <label>population</label>
    <integersOnly>true</integersOnly>
    <historyAutoRecorderDefs>
      <li>FreeColonists</li>
      <li>Prisoners</li>
    </historyAutoRecorderDefs>
  </HistoryAutoRecorderGroupDef>

  <HistoryAutoRecorderGroupDef>
    <defName>ColonistMood</defName>
    <label>colonist mood</label>
    <useFixedScale>true</useFixedScale>
    <fixedScale>(0, 100)</fixedScale>
    <historyAutoRecorderDefs>
      <li>ColonistMood</li>
    </historyAutoRecorderDefs>
  </HistoryAutoRecorderGroupDef>

  <!-- Debug -->

  <HistoryAutoRecorderGroupDef>
    <defName>Debug</defName>
    <label>debug</label>
    <historyAutoRecorderDefs>
      <li>Adaptation</li>
      <li>ThreatPoints</li>
      <li>PopAdaptation</li>
      <li>PopIntent</li>
    </historyAutoRecorderDefs>
    <onlyPositiveValues>false</onlyPositiveValues>
    <devModeOnly>true</devModeOnly>
  </HistoryAutoRecorderGroupDef>

</Defs>
