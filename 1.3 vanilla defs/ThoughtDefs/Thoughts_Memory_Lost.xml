<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThoughtDef Name="LostMemory" Abstract="True">
    <stackLimit>5</stackLimit>
  </ThoughtDef>

  <!--===================== general and non-related pawn deaths =====================-->
  
  <ThoughtDef>
    <defName>ColonistLost</defName>
    <durationDays>6</durationDays>
    <stackLimit>5</stackLimit>
    <showBubble>true</showBubble>
    <nullifyingTraits>
      <li>Psychopath</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>colonist lost</label>
        <description>We just lost someone of our colony in a tragic way.</description>
        <baseMoodEffect>-6</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <!--===================== bonded animal released =====================-->

  <ThoughtDef ParentName="LostMemory">
    <defName>BondedAnimalReleased</defName>
    <showBubble>true</showBubble>
    <durationDays>15</durationDays>
    <stackLimit>5</stackLimit>
    <stackLimitForSameOtherPawn>1</stackLimitForSameOtherPawn>
    <nullifyingTraits>
      <li>Psychopath</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>bonded animal {0} released</label>
        <description>Such a tender, unique animal. Why did it have to go?</description>
        <baseMoodEffect>-5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <!--===================== bonded animal lost =====================-->

  <ThoughtDef ParentName="LostMemory">
    <defName>BondedAnimalLost</defName>
    <showBubble>true</showBubble>
    <durationDays>20</durationDays>
    <stackLimit>5</stackLimit>
    <stackLimitForSameOtherPawn>1</stackLimitForSameOtherPawn>
