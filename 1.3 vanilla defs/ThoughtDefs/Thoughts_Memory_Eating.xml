<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- ======= Basic quality thoughts ========= -->

  <ThoughtDef>
    <defName>AteLavishMeal</defName>
    <durationDays>1</durationDays>
    <stages>
      <li>
        <label>ate lavish meal</label>
        <description>That lavish meal was amazing. It nourished my body and my soul.</description>
        <baseMoodEffect>12</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>AteFineMeal</defName>
    <durationDays>1</durationDays>
    <stages>
      <li>
        <label>ate fine meal</label>
        <description>I ate a really tasty fine meal. Yum!</description>
        <baseMoodEffect>5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>AteRawFood</defName>
    <showBubble>true</showBubble>
    <icon>Things/Mote/ThoughtSymbol/Food</icon>
    <durationDays>1</durationDays>
    <stages>
      <li>
        <label>ate raw food</label>
        <description>I had to eat raw food. We should be cooking that kind of food before eating it. We're not animals.</description>
        <baseMoodEffect>-7</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>AteKibble</defName>
    <showBubble>true</showBubble>
    <icon>Things/Mote/ThoughtSymbol/Food</icon>
    <durationDays>1</durationDays>
    <stages>
      <li>
        <label>ate kibble</label>
        <description>I had to eat animal kibble. It's like I don't get to be human any more.</description>
        <baseMoodEffect>-12</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <ThoughtDef>
    <defName>AteCorpse</defName>
    <showBubble>true</showBubble>
    <icon>Things/Mote/ThoughtSymbol/Food</icon>
    <durationDays>1</durationDays>
    <stages>
      <li>
        <label>ate corpse</label>
        <description>I had to eat the flesh of a dead creature without even butchering or cooking it.</description>
        <baseMoodEffect>-12</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <!--=========== Special nature thoughts ============-->

  <ThoughtDef>
    <defName>AteHumanlikeMeatDirect</defName>
    <showBubble>true</showBubble>
    <icon>Things/Mote/ThoughtSymbol/Food</icon>
    <durationDays>1</durationDays>
    <nullifyingTraits>
      <li>Cannibal</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>raw cannibalism</label>
        <description>I ate the meat of another human, raw, like an animal. This is a nightmare.</description>
        <baseMoodEffect>-20</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <ThoughtDef>
    <defName>AteHumanlikeMeatDirectCannibal</defName>
    <showBubble>true</showBubble>
    <icon>Things/Mote/ThoughtSymbol/Food</icon>
    <durationDays>1</durationDays>
    <requiredTraits>
      <li>Cannibal</li>
    </requiredTraits>
    <stages>
      <li>
        <label>raw cannibalism</label>
        <description>I ate the meat of another human, raw, like an animal. It was so... succulent.</description>
        <baseMoodEffect>20</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>AteHumanlikeMeatAsIngredient</defName>
    <showBubble>true</showBubble>
    <icon>Things/Mote/ThoughtSymbol/Food</icon>
    <durationDays>1</durationDays>
    <nullifyingTraits>
      <li>Cannibal</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>cooked cannibalism</label>
        <description>I ate a meal made from the meat of another human. This is horrible.</description>
        <baseMoodEffect>-15</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>AteHumanlikeMeatAsIngredientCannibal</defName>
    <showBubble>true</showBubble>
    <icon>Things/Mote/ThoughtSymbol/Food</icon>
    <durationDays>1</durationDays>
    <requiredTraits>
      <li>Cannibal</li>
    </requiredTraits>
    <stages>
      <li>
        <label>cooked cannibalism</label>
        <description>I ate a meal made from the meat of another human. So pleasurable. If only I had some fava beans and a nice chianti.</description>
        <baseMoodEffect>15</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>AteInsectMeatDirect</defName>
    <showBubble>true</showBubble>
    <icon>Things/Mote/ThoughtSymbol/Food</icon>
    <durationDays>1</durationDays>
    <stages>
      <li>
        <label>ate insect meat</label>
        <description>I ate some gray, slimy insect meat. It was, possibly, the most disgusting thing I've ever tasted.</description>
        <baseMoodEffect>-6</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>AteInsectMeatAsIngredient</defName>
    <showBubble>true</showBubble>
    <icon>Things/Mote/ThoughtSymbol/Food</icon>
    <durationDays>1</durationDays>
    <stages>
      <li>
        <label>ate cooked insect meat</label>
        <description>I ate a meal cooked from gray, slimy insect meat. The seasoning partly covered the taste, but there were glands and fluid pockets in there that I can't identify.</description>
        <baseMoodEffect>-3</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <!--================== Rotten state thoughts =================-->

  <ThoughtDef>
    <defName>AteRottenFood</defName>
    <showBubble>true</showBubble>
    <icon>Things/Mote/ThoughtSymbol/Food</icon>
    <durationDays>1</durationDays>
    <stages>
      <li>
        <label>ate rotten food</label>
        <description>I ate some disgusting, putrid food. It was melting in my mouth - but not in a good way.</description>
        <baseMoodEffect>-10</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

</Defs>
