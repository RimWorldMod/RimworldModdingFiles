  <ThoughtDef>
    <defName>KnowButcheredHumanlikeCorpse</defName>
    <durationDays>6</durationDays>
    <stackLimit>1</stackLimit>
    <nullifyingTraits>
      <li>Psychopath</li>
      <li>Bloodlust</li>
