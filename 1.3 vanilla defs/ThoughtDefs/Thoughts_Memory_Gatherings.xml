    <durationDays>10.0</durationDays>
    <stackLimit>10</stackLimit>
    <stages>
      <li>
        <label>attended wedding</label>
        <description>It was great to see two people come together to build a future like that.</description>
        <baseMoodEffect>20</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>AttendedParty</defName>
