<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingSetMakerDef>
    <defName>DebugCaravanInventory</defName>
    <root Class="ThingSetMaker_Sum">
      <options>
        <li>
          <chance>1</chance>
          <thingSetMaker Class="ThingSetMaker_StackCount">
            <fixedParams>
              <filter>
                <thingDefs>
                  <li>Silver</li>
                </thingDefs>
              </filter>
              <countRange>100~4000</countRange>
            </fixedParams>
          </thingSetMaker>
        </li>
        <li>
          <chance>0.7</chance>
          <thingSetMaker Class="ThingSetMaker_RandomGeneralGoods" />
        </li>
        <li>
          <chance>0.7</chance>
          <thingSetMaker Class="ThingSetMaker_MarketValue">
            <fixedParams>
              <filter>
                <categories>
                  <li>Apparel</li>
                </categories>
                <thingSetMakerTagsToDisallow>
                  <li>RewardStandardHighFreq</li>
                </thingSetMakerTagsToDisallow>
              </filter>
            </fixedParams>
          </thingSetMaker>
        </li>
        <li>
          <chance>0.7</chance>
          <thingSetMaker Class="ThingSetMaker_MarketValue">
            <fixedParams>
              <filter>
                <categories>
                  <li>ResourcesRaw</li>
                </categories>
                <thingSetMakerTagsToDisallow>
                  <li>RewardStandardHighFreq</li>
                </thingSetMakerTagsToDisallow>
              </filter>
            </fixedParams>
          </thingSetMaker>
        </li>
        <li>
          <chance>0.6</chance>
          <thingSetMaker Class="ThingSetMaker_MarketValue">
            <fixedParams>
              <filter>
                <categories>
                  <li>Weapons</li>
                </categories>
                <disallowedThingDefs>
                  <li>WoodLog</li>
                </disallowedThingDefs>
                <thingSetMakerTagsToDisallow>
                  <li>RewardStandardHighFreq</li>
                </thingSetMakerTagsToDisallow>
              </filter>
              <totalMarketValueRange>1000~2000</totalMarketValueRange>
            </fixedParams>
          </thingSetMaker>
        </li>
      </options>
    </root>
  </ThingSetMakerDef>

  <ThingSetMakerDef>
    <defName>DebugQuestDropPodsContents</defName>
    <root Class="ThingSetMaker_Sum">
      <options>
        <li>
          <chance>1</chance>
          <thingSetMaker Class="ThingSetMaker_StackCount">
            <fixedParams>
              <filter>
                <thingDefs>
                  <li>Silver</li>
                </thingDefs>
              </filter>
              <countRange>100~4000</countRange>
            </fixedParams>
          </thingSetMaker>
        </li>
        <li>
          <chance>0.7</chance>
          <thingSetMaker Class="ThingSetMaker_RandomGeneralGoods" />
        </li>
        <li>
          <chance>0.7</chance>
          <thingSetMaker Class="ThingSetMaker_MarketValue">
            <fixedParams>
              <filter>
                <categories>
                  <li>ResourcesRaw</li>
                </categories>
                <thingSetMakerTagsToDisallow>
                  <li>RewardStandardHighFreq</li>
                </thingSetMakerTagsToDisallow>
              </filter>
            </fixedParams>
          </thingSetMaker>
        </li>
        <li>
          <chance>1</chance>
          <thingSetMaker Class="ThingSetMaker_RefugeePod" />
        </li>
      </options>
    </root>
  </ThingSetMakerDef>

  <ThingSetMakerDef>
    <defName>TraderStock</defName>
    <root Class="ThingSetMaker_TraderStock">
      <fixedParams>
        <qualityGenerator>Trader</qualityGenerator>
      </fixedParams>
    </root>
  </ThingSetMakerDef>

  <ThingSetMakerDef>
    <defName>ResourcePod</defName>
    <root Class="ThingSetMaker_ResourcePod" />
  </ThingSetMakerDef>

  <ThingSetMakerDef>
    <defName>RefugeePod</defName>
    <root Class="ThingSetMaker_RefugeePod" />
  </ThingSetMakerDef>

  <ThingSetMakerDef>
    <defName>Meteorite</defName>
    <root Class="ThingSetMaker_Meteorite" />
  </ThingSetMakerDef>

  <ThingSetMakerDef>
    <defName>VisitorGift</defName>
    <debugParams> <!-- debug only! -->
      <totalMarketValueRange>100~500</totalMarketValueRange>
    </debugParams>
    <root Class="ThingSetMaker_RandomOption">
      <fixedParams>
        <qualityGenerator>Gift</qualityGenerator>
      </fixedParams>
      <options>
        <li>
          <weight>0.8</weight>
          <thingSetMaker Class="ThingSetMaker_MarketValue">
            <fixedParams>
              <filter>
                <thingDefs>
                  <li>Silver</li>
                </thingDefs>
              </filter>
            </fixedParams>
          </thingSetMaker>
        </li>
        <li>
          <weight>1</weight>
          <thingSetMaker Class="ThingSetMaker_MarketValue">
            <fixedParams>
              <filter>
                <categories>
                  <li>ResourcesRaw</li>
                </categories>
                <disallowCheaperThan>6</disallowCheaperThan>
              </filter>
            </fixedParams>
          </thingSetMaker>
        </li>
        <li>
          <weight>1</weight>
          <thingSetMaker Class="ThingSetMaker_MarketValue">
            <fixedParams>
              <filter>
                <thingDefs>
                  <li>MedicineIndustrial</li>
                  <li>MedicineUltratech</li>
                  <li>ComponentIndustrial</li>
                  <li>ComponentSpacer</li>
                </thingDefs>
              </filter>
            </fixedParams>
          </thingSetMaker>
        </li>
        <li>
          <weight>1</weight>
          <thingSetMaker Class="ThingSetMaker_MarketValue">
            <fixedParams>
              <filter>
                <categories>
                  <li>Apparel</li>
                </categories>
                <disallowedThingDefs>
                  <li>Apparel_SmokepopBelt</li>
                </disallowedThingDefs>
                <thingSetMakerTagsToDisallow>
                  <li>RewardStandardHighFreq</li>
                </thingSetMakerTagsToDisallow>
              </filter>
            </fixedParams>
          </thingSetMaker>
        </li>
        <li>
          <weight>1</weight>
          <thingSetMaker Class="ThingSetMaker_MarketValue">
            <fixedParams>
              <filter>
                <categories>
                  <li>Weapons</li>
                </categories>
                <thingSetMakerTagsToDisallow>
                  <li>RewardStandardHighFreq</li>
                </thingSetMakerTagsToDisallow>
              </filter>
            </fixedParams>
          </thingSetMaker>
        </li>
      </options>
    </root>
  </ThingSetMakerDef>
  
</Defs>
