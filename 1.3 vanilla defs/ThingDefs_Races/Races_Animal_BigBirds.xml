  <ThingDef ParentName="BigBirdThingBase">
    <defName>Ostrich</defName>
    <label>ostrich</label>
    <description>The largest unmodified bird species, ostriches are known for their fast run, huge eggs, and powerful kick. It is easily angered.</description>
    <statBases>
      <MoveSpeed>6.0</MoveSpeed>
      <MarketValue>250</MarketValue>
      <ComfyTemperatureMin>-8</ComfyTemperatureMin>
      <ComfyTemperatureMax>50</ComfyTemperatureMax>
      <FilthRate>8</FilthRate>
    </statBases>
    <race>
      <herdAnimal>false</herdAnimal>
      <baseBodySize>1.0</baseBodySize>
      <baseHealthScale>1.0</baseHealthScale>
      <baseHungerRate>0.42</baseHungerRate>
      <foodType>VegetarianRoughAnimal</foodType>
      <wildness>0.95</wildness>
      <roamMtbDays>3</roamMtbDays>
      <lifeExpectancy>45</lifeExpectancy>
