<?xml version="1.0" encoding="utf-8" ?>
<WorkGivers>

	<!-- Work givers go hand-in-hand with work types and relate to the in-game work priority tab.
	Work givers are assignments within a specific work type that a pawn will do according to prioty. -->

	<WorkGiverDef>
		<defName>Desired defName</defName>
		<!-- Desired defName to reference and use the work giver -->
		<label>second-person description</label>
		<!-- Short verb describing the action. For example - "fight fires", "drink lemonade" -->
		<giverClass>WorkGiver_WorkGiverType</giverClass>
		<!-- Sets which work class is used in the work giver. Available vanilla giverClasses:
		WorkGiver_BuildRoof
		WorkGiver_BuryCorpses
		WorkGiver_CleanFilth
		WorkGiver_ClearSnow
		WorkGiver_ConstructDeliverResourcesToBlueprints
		WorkGiver_ConstructDeliverResourcesToFrames
		WorkGiver_ConstructFinishFrames
		WorkGiver_ConstructRemoveFloor
		WorkGiver_ConstructSmoothFloor
		WorkGiver_CookFillHopper
		WorkGiver_Deconstruct
		WorkGiver_DeepDrill
		WorkGiver_DoBill
		WorkGiver_FeedPatient
		WorkGiver_FightFires
		WorkGiver_FillFermentingBarrel
		WorkGiver_FixBrokenDownBuilding
		WorkGiver_Flick
		WorkGiver_GrowerHarvest
		WorkGiver_GrowerSow
		WorkGiver_HaulCorpses
		WorkGiver_HaulGeneral
		WorkGiver_HunterHunt
		WorkGiver_Milk
		WorkGiver_Miner
		WorkGiver_Open
		WorkGiver_PatientGoToBedEmergency
		WorkGiver_PatientGoToBedRecuperate
		WorkGiver_PlantsCut
		WorkGiver_RearmTraps
		WorkGiver_Refuel
		WorkGiver_RemoveRoof
		WorkGiver_Repair
		WorkGiver_RescueDowned
		WorkGiver_Researcher
		WorkGiver_Shear
		WorkGiver_Slaughter
		WorkGiver_Strip
		WorkGiver_TakeBeerOutOfFermentingBarrel
		WorkGiver_TakeToBedToOperate
		WorkGiver_Tame
		WorkGiver_Tend
		WorkGiver_TendEmergency
		WorkGiver_Train
		WorkGiver_Uninstall
		WorkGiver_VisitSickPawn
		WorkGiver_Warden_Chat
		WorkGiver_Warden_DeliverFood
		WorkGiver_Warden_DoExecution
		WorkGiver_Warden_Feed
		WorkGiver_Warden_ReleasePrisoner
		WorkGiver_Warden_TakeToBed -->
		<workType>Corresponding WorkType</workType>
		<!-- Sets which work type this work giver belongs to. Available vanilla work types:
		Art
		Cleaning
		Construction
		Cooking
		Crafting
		Doctor
		Firefighter
		Flicker
		Growing
		Handling
		Hauling
		Hunting
		Mining
		PatientBedRest
		PatientEmergency
		PlantCutting
		Repair
		Research
		Smithing
		Tailoring
		Warden -->
		<emergency>true or false</emergency>
		<!-- Is this task relevant to emergencies? Defaults to false -->
		<verb>first-person description</verb>
		<!-- Short normal verb. For example - "cook", "receive treatment in" -->
		<gerund>present-progressive verb</gerund>
		<!-- Based on <verb> above it. For example - "cooking", "receiving treatment in" -->
		<requiredCapacities>
			<li>Capacity defName</li>
		</requiredCapacities>
		<!-- Links the work giver to a specific capacity. You should probably only use "Manipulation", "Sight" or "Talking" out of the list. Vanilla capacities:
		BloodFiltration
		BloodPumping
		Breathing
		Consciousness
		Eating
		Hearing
		Manipulation
		Metabolism
		Moving
		Sight
		Talking -->
		<priorityInType>number</priorityInType>
		<!-- Work givers with a high priority take precedent over lower priority jobs in the same workType.
		This works linearly, so a work giver with priorty 3 is done before a priority 2 work giver, which is done before a priority 1 work giver etc. -->
		<prioritizeSustains>true or false</prioritizeSustains>
		<!-- If true, telling a pawn to prioritise a task will set them to do it forever (until the player stops them manually or they collapse -->
		<directOrderable>true or false</directOrderable>
		<!-- If false, the player can't order this action manually -->
		<fixedBillGiverDefs>
		<!-- Any BillGiver only applies when the giverClass is "WorkGiver_DoBill"
		fixedBillGiverDefs defines which buildings/items can grant this work giver according to their defName -->
			<li>Item defName</li>
			<li>Item defName</li>
			<!-- One or more defNames can be defined with this structure -->
		</fixedBillGiverDefs>
		<billGiversAllHumanlikes>true or false</billGiversAllHumanlikes>
		<!-- If true, all humanoids can grant bills to this work giver. (For example - medical operations) -->
		<billGiversAllHumanlikesCorpses>true or false</billGiversAllHumanlikesCorpses>
		<!-- If true, all humanoid corpses can grant bills to this work giver. -->
		<billGiversAllMechanoids>true or false</billGiversAllMechanoids>
		<!-- If true, all mechanoids can grant bills to this work giver. (For example - "shut down mechanoid") -->
		<billGiversAllMechanoidsCorpses>true or false</billGiversAllMechanoidsCorpses>
		<!-- If true, all mechanoid corpses can grant bills to this work giver. -->
		<canBeDoneByNonColonists>true or false</canBeDoneByNonColonists>
		<!-- Defines if the operation can be used by outsiders (raiders, trade caravans etc.), this is used for siege mechanics and the likes -->
		<scanThings>true or false</scanThings>
		<!-- Normally not defined. Sets the work giver to ignore (false) or acknowledge (true) things in the environment.
		Defined as false for work givers relating to roofs, floors, growing and cleaning snow -->
		<scanCells>true or false</scanCells>
		<!-- Normally not defined. Sets the work giver to ignore (false) or acknowledge (true) cells (tile properties).
		Defined as true for work givers relating to roofs, floors, growing and cleaning snow -->
	</WorkGiverDef>

	<!-- Basic work giver clean template -->
	
	<WorkGiverDef>
		<defName></defName>
		<label></label>
		<giverClass></giverClass>
		<workType></workType>
		<priorityInType></priorityInType>
		<verb></verb>
		<gerund></gerund>
	</WorkGiverDef>

	<!-- Advanced work giver clean template -->
	
	<WorkGiverDef>
		<defName></defName>
		<label></label>
		<giverClass></giverClass>
		<workType></workType>
		<emergency></emergency>
		<verb></verb>
		<gerund></gerund>
		<requiredCapacities>
			<li></li>
		</requiredCapacities>
		<priorityInType></priorityInType>
		<prioritizeSustains></prioritizeSustains>
		<directOrderable></directOrderable>
		<fixedBillGiverDefs>
			<li></li>
			<li></li>
		</fixedBillGiverDefs>
		<billGiversAllHumanlikes></billGiversAllHumanlikes>
		<billGiversAllHumanlikesCorpses></billGiversAllHumanlikesCorpses>
		<billGiversAllMechanoids></billGiversAllMechanoids>
		<billGiversAllMechanoidsCorpses></billGiversAllMechanoidsCorpses>
		<canBeDoneByNonColonists></canBeDoneByNonColonists>
		<scanThings></scanThings>
		<scanCells></scanCells>
	</WorkGiverDef>
	
</WorkGivers>