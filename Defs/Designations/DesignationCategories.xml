<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Designation categories are used in the Architect tab, each containing a list of tasks -->
	
	<DesignationCategoryDef>
		<defName>CategoryDefName</defName>
		<!-- Desired defName to reference and use the designation category -->
		<label>category_name</label>
		<!-- The in-game display name for the designation category -->
		<description>DesignationCategory_description.</description>
		<!-- Long-form description of the category -->
		<order>number</order>
		<!-- Location of the category in the list. Highest order category is first, second highest to its right, third highest directly under the first etc. -->
		<specialDesignatorClasses>
		<!-- Lists designations that show up in the category's menu by default -->
			<li>Designator_name</li>
			<!-- Vanilla SpecialDesignator classes:
			Designator_AreaAllowedClear
			Designator_AreaAllowedExpand
			Designator_AreaBuildRoofClear
			Designator_AreaBuildRoofExpand
			Designator_AreaHomeClear
			Designator_AreaHomeExpand
			Designator_AreaNoRoofClear
			Designator_AreaNoRoofExpand
			Designator_AreaSnowClearClear
			Designator_AreaSnowClearExpand
			Designator_Cancel
			Designator_Claim
			Designator_Deconstruct
			Designator_Haul
			Designator_Hunt
			Designator_Mine
			Designator_Open
			Designator_PlanAdd
			Designator_PlanRemove
			Designator_PlantsCut
			Designator_PlantsHarvest
			Designator_PlantsHarvestWood
			Designator_RearmTrap
			Designator_RemoveFloor
			Designator_Slaughter
			Designator_SmoothFloor
			Designator_Strip
			Designator_Tame
			Designator_Uninstall
			Designator_ZoneAdd_Growing
			Designator_ZoneAddStockpile_Dumping
			Designator_ZoneAddStockpile_Resources
			Designator_ZoneDelete -->
			<li>Designator_name</li>
		</specialDesignatorClasses>
	</DesignationCategoryDef>

</Defs>