<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Vanilla biomes -->

	<!-- Desert -->

	<BiomeDef>
		<defName>Desert</defName>
		<label>desert</label>
		<description>A very dry, hot area which supports little life.</description>
		<workerClass>BiomeWorker_Desert</workerClass>
		<animalDensity>0.8</animalDensity>
		<plantDensity>0.14</plantDensity>
		<baseColor>(0.592, 0.568, 0.396)</baseColor>
		<diseaseMtbDays>80</diseaseMtbDays>
		<diseases>
			<li>
				<diseaseInc>Disease_Flu</diseaseInc>
				<commonality>100</commonality>
			</li>
			<li>
				<diseaseInc>Disease_Plague</diseaseInc>
				<commonality>80</commonality>
			</li>
			<li>
				<diseaseInc>Disease_FibrousMechanites</diseaseInc>
				<commonality>30</commonality>
			</li>
			<li>
				<diseaseInc>Disease_SensoryMechanites</diseaseInc>
				<commonality>30</commonality>
			</li>
			<li>
				<diseaseInc>Disease_GutWorms</diseaseInc>
				<commonality>60</commonality>
			</li>
			<li>
				<diseaseInc>Disease_MuscleParasites</diseaseInc>
				<commonality>60</commonality>
			</li>
		</diseases>
		<terrainsByFertility>
			<li>
				<terrain>Sand</terrain>
				<min>-999</min>
				<max>0.80</max>
			</li>
			<li>
				<terrain>Soil</terrain>
				<min>0.80</min>
				<max>999</max>
			</li>
		</terrainsByFertility>
		<baseWeatherCommonalities>
			<Clear>18</Clear>
			<Rain>2</Rain>
			<DryThunderstorm>1</DryThunderstorm>
			<RainyThunderstorm>1</RainyThunderstorm>
			<SnowGentle>4</SnowGentle>
			<SnowHard>4</SnowHard>
		</baseWeatherCommonalities>
		<wildPlants>
			<PlantAgave>0.25</PlantAgave>
			<PlantSaguaroCactus>1</PlantSaguaroCactus>
			<PlantPincushionCactus>1</PlantPincushionCactus>
			<PlantBush>0.25</PlantBush>
			<PlantGrass>6</PlantGrass>
			<PlantDandelion>0.5</PlantDandelion>
			<PlantTreePoplar>0.45</PlantTreePoplar>
		</wildPlants>
		<wildAnimals>
			<Gazelle>0.1</Gazelle>
			<Emu>0.02</Emu>
			<Megascarab>1</Megascarab>
			<Iguana>0.7</Iguana>
			<Dromedary>0.5</Dromedary>
			<Boomalope>0.2</Boomalope>
			<Ostrich>0.2</Ostrich>
			<Rat>0.30</Rat>
			<Cougar>0.04</Cougar>
			<FoxFennec>0.02</FoxFennec>
		</wildAnimals>
		<allowedPackAnimals>
			<li>Muffalo</li>
			<li>Dromedary</li>
		</allowedPackAnimals>
	</BiomeDef>

	<!-- Ice sheet -->

	<BiomeDef>
		<defName>IceSheet</defName>
		<label>ice sheet</label>
		<description>The surface is covered with sheets of ice which can be kilometers thick. There is no access to soil, so there are no plants. The only animals seen here are migrating to somewhere else - or badly lost.</description>
		<workerClass>BiomeWorker_IceSheet</workerClass>
		<animalDensity>0.4</animalDensity>
		<plantDensity>0</plantDensity>
		<baseColor>(0.48, 0.765, 0.882)</baseColor>
		<soundsAmbient>
			<li>AmbientWind_Desolate</li>
		</soundsAmbient>
		<diseaseMtbDays>90</diseaseMtbDays>
		<diseases>
			<li>
				<diseaseInc>Disease_Flu</diseaseInc>
				<commonality>100</commonality>
			</li>
			<li>
				<diseaseInc>Disease_Plague</diseaseInc>
				<commonality>80</commonality>
			</li>
			<li>
				<diseaseInc>Disease_FibrousMechanites</diseaseInc>
				<commonality>30</commonality>
			</li>
			<li>
				<diseaseInc>Disease_SensoryMechanites</diseaseInc>
				<commonality>30</commonality>
			</li>
		</diseases>
		<terrainsByFertility>
			<li>
				<terrain>Ice</terrain>
				<min>-999</min>
				<max>999</max>
			</li>
		</terrainsByFertility>
		<baseWeatherCommonalities>
			<Clear>12</Clear>
			<Fog>10</Fog>
			<Rain>0</Rain>
			<DryThunderstorm>2</DryThunderstorm>
			<RainyThunderstorm>0</RainyThunderstorm>
			<FoggyRain>4</FoggyRain>
			<SnowGentle>20</SnowGentle>
			<SnowHard>40</SnowHard>
		</baseWeatherCommonalities>
		<wildPlants>
			<PlantGrass>6.9</PlantGrass>
		</wildPlants>
		<wildAnimals>
			<Snowhare>1</Snowhare>
			<Muffalo>0.08</Muffalo>
			<Megatherium>0.003</Megatherium>
			<PolarBear>0.08</PolarBear>
			<Lynx>0.01</Lynx>
			<WolfArctic>0.02</WolfArctic>
			<FoxArctic>0.02</FoxArctic>
		</wildAnimals>
		<allowedPackAnimals>
			<li>Muffalo</li>
		</allowedPackAnimals>
	</BiomeDef>

	<!-- Rain forest -->

	<BiomeDef>
		<defName>TropicalRainforest</defName>
		<label>tropical rainforest</label>
		<description>A thick, moist jungle. Dense overgrowth and aggressive wildlife make construction and survival difficult.</description>
		<workerClass>BiomeWorker_TropicalRainforest</workerClass>
		<animalDensity>7.2</animalDensity>
		<plantDensity>1.0</plantDensity>
		<baseColor>(0, 0.372, 0.035)</baseColor>
		<soundsAmbient>
			<li>AmbientNightInsects_Jungle</li>
			<li>AmbientDayInsects_Jungle</li>
		</soundsAmbient>
		<diseaseMtbDays>30</diseaseMtbDays>
		<diseases>
			<li>
				<diseaseInc>Disease_Flu</diseaseInc>
				<commonality>100</commonality>
			</li>
			<li>
				<diseaseInc>Disease_Plague</diseaseInc>
				<commonality>100</commonality>
			</li>
			<li>
				<diseaseInc>Disease_Malaria</diseaseInc>
				<commonality>160</commonality>
			</li>
			<li>
				<diseaseInc>Disease_SleepingSickness</diseaseInc>
				<commonality>140</commonality>
			</li>
			<li>
				<diseaseInc>Disease_FibrousMechanites</diseaseInc>
				<commonality>30</commonality>
			</li>
			<li>
				<diseaseInc>Disease_SensoryMechanites</diseaseInc>
				<commonality>30</commonality>
			</li>
			<li>
				<diseaseInc>Disease_GutWorms</diseaseInc>
				<commonality>80</commonality>
			</li>
			<li>
				<diseaseInc>Disease_MuscleParasites</diseaseInc>
				<commonality>80</commonality>
			</li>
		</diseases>
		<terrainsByFertility>
			<li>
				<terrain>Soil</terrain>
				<min>-999</min>
				<max>0.87</max>
			</li>
			<li>
				<terrain>SoilRich</terrain>
				<min>0.87</min>
				<max>999</max>
			</li>
		</terrainsByFertility>
		<terrainPatchMakers>
			<li>
				<perlinFrequency>0.04</perlinFrequency>
				<thresholds>
					<li>
						<terrain>MarshyTerrain</terrain>
						<min>0.7</min>
						<max>999</max>
					</li>
				</thresholds>
			</li>
			<li>
				<perlinFrequency>0.035</perlinFrequency>
				<thresholds>
					<li>
						<terrain>MarshyTerrain</terrain>
						<min>0.64</min>
						<max>0.87</max>
					</li>
					<li>
						<terrain>Marsh</terrain>
						<min>0.87</min>
						<max>999</max>
					</li>
				</thresholds>
			</li>
		</terrainPatchMakers>
		<baseWeatherCommonalities>
			<Clear>18</Clear>
			<Fog>1</Fog>
			<Rain>2</Rain>
			<DryThunderstorm>0.3</DryThunderstorm>
			<RainyThunderstorm>1.7</RainyThunderstorm>
			<FoggyRain>1</FoggyRain>
			<SnowGentle>4</SnowGentle>
			<SnowHard>4</SnowHard>
		</baseWeatherCommonalities>
		<wildPlants>
			<PlantRaspberry>0.1</PlantRaspberry>
			<PlantBush>0.7</PlantBush>
			<PlantTallGrass>6.9</PlantTallGrass>
			<PlantDandelion>0.8</PlantDandelion>
			<PlantTreeTeak>0.3</PlantTreeTeak>
			<PlantTreeCecropia>0.6</PlantTreeCecropia>
		</wildPlants>
		<wildAnimals>
			<Elephant>0.05</Elephant>
			<Monkey>0.5</Monkey>
			<WildBoar>0.5</WildBoar>
			<Tortoise>0.3</Tortoise>
			<Chinchilla>0.3</Chinchilla>
			<Boomalope>0.35</Boomalope>
			<Capybara>0.35</Capybara>
			<Alpaca>0.25</Alpaca>
			<Cassowary>0.35</Cassowary>
			<Turkey>0.1</Turkey>
			<Emu>0.1</Emu>
			<Rat>0.5</Rat>
			<Cobra>0.12</Cobra>
			<Panther>0.085</Panther>
		</wildAnimals>
		<allowedPackAnimals>
			<li>Muffalo</li>
		</allowedPackAnimals>
	</BiomeDef>

	<!-- Ocean (non-habitable) -->

	<BiomeDef>
		<defName>Ocean</defName>
		<label>ocean</label>
		<description>Open ocean. Great for fish - not so great for you.</description>
		<workerClass>BiomeWorker_Ocean</workerClass>
		<canBuildBase>false</canBuildBase>
		<hideTerrain>true</hideTerrain>
		<baseColor>(0.125, 0.369, 0.560)</baseColor>
	</BiomeDef>

</Defs>