			<MealFine>1</MealFine>
		</products>
		<fixedIngredientFilter>
			<categories>
				<li>FoodRaw</li>
			</categories>
			<disallowedSpecialFilters>
				<li>AllowPlantFood</li>
			</disallowedSpecialFilters>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<categories>
				<li>FoodRaw</li>
			</categories>
