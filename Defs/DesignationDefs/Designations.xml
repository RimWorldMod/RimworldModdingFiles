<?xml version="1.0" encoding="utf-8" ?>
<DesignationDefs>

	<!-- Designations are targeted tasks -->
	
	<DesignationDef>
		<defName>DesignationDefName</defName>
		<!-- Desired defName to reference and use the designation-->
		<texturePath>Desired_texture_path</texturePath>
		<!-- Graphics displayed on the button -->
		<targetType>desired_target</targetType>
		<!-- Defines the designation target. Vanilla uses Cell (ex. terrain) or Thing (ex. wall) -->
		<removeIfBuildingDespawned>true_or_false</removeIfBuildingDespawned>
		<!-- Optional. Clears the designation if the target has been despawned -->
		<designateCancelable>true_or_false</designateCancelable>
		<!-- Optional. Defaults to true. Defines if the designation can be cancelled -->
	</DesignationDef>

</DesignationDefs>